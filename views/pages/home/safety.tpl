<section class="safety">
    <div class="slider safety-slider g-lazy-img">
        <div class="swiper">
            <div class="swiper-wrapper">
                <div class="swiper-slide">
                    <picture>
                        <source srcset="#" data-src="/img/images/home/safety001@1x.webp" media="(max-width: 767px)"
                            type="image/webp">
                        <source srcset="#" data-src="/img/images/home/safety001@1x.jpg" media="(max-width: 767px)">
                        <source srcset="#" data-src="/img/images/home/safety001@2x.webp" media="(max-width: 1199px)"
                            type="image/webp">
                        <source srcset="#" data-src="/img/images/home/safety001@2x.jpg" media="(max-width: 1199px)">
                        <source srcset="#" data-src="/img/images/home/safety001@3x.webp" type="image/webp">
                        <img class="image safety-slider__bg" src="#" data-src="/img/images/home/safety001@3x.jpg"
                            alt="баннер" width="1920" height="860" loading="lazy" decoding="async">
                    </picture>
                    <div class="container safety-container__title">
                        <h2 class="title safety__title">безопасность и комфорт</h2>
                    </div>
                </div>
                <div class="swiper-slide">
                    <picture>
                        <source srcset="#" data-src="/img/images/home/safety002@1x.webp" media="(max-width: 767px)"
                            type="image/webp">
                        <source srcset="#" data-src="/img/images/home/safety002@1x.jpg" media="(max-width: 767px)">
                        <source srcset="#" data-src="/img/images/home/safety002@2x.webp" media="(max-width: 1199px)"
                            type="image/webp">
                        <source srcset="#" data-src="/img/images/home/safety002@2x.jpg" media="(max-width: 1199px)">
                        <source srcset="#" data-src="/img/images/home/safety002@3x.webp" type="image/webp">
                        <img class="image safety-slider__bg" src="#" data-src="/img/images/home/safety002@3x.jpg"
                            alt="баннер" width="1920" height="860" loading="lazy" decoding="async">
                    </picture>
                    <div class="container safety-container__title">
                        <h2 class="title safety__title">современная архитектура</h2>
                    </div>
                </div>
            </div>
            <div class="container safety-container__btn">
                <div class="swiper-pagination"></div>
                <div class="safety-container__nav">
                    <button class="btn slider-btn slider-btn__gold slider-btn__prev" type="button">
                        {include "components/icon.tpl" icon=["file" => "sprite", "class" => "slider-btn__icon", "name" => "slider-arrow-prev"]}
                    </button>
                    <button class="btn slider-btn slider-btn__gold slider-btn__next" type="button">
                        {include "components/icon.tpl" icon=["file" => "sprite", "class" => "slider-btn__icon", "name" => "slider-arrow-next"]}
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>